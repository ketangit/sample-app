{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "lib",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "module": "commonjs",
    "noImplicitReturns": true,
    "typeRoots": ["node_modules/@types"],
    "target": "es6",
    "lib": ["es6"]
  },

  "include": ["src"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
